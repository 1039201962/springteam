<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   <mapper namespace="com.st.springsys.sysgoods.dao.SysGoodsDao">
	<!-- 上架商品 -->
	<select id="findOnline" resultType="com.st.springsys.sysgoods.pojo.SysGoods">
		select * from goods
		where onSale=#{onSale}
        limit #{pageIndex},#{pageSize}
	</select>
	<!-- 查询 排序 分页 -->
	<select id="findSysGoods" resultType="com.st.springsys.sysgoods.pojo.SysGoods">
		select * from goods
		<where>
			<if test="title!=null and title!=''">
				title like concat('%',#{title},'%')
			</if>
			<if test="categoryId!=null and categoryId!=''">
				categoryId=#{categoryId}
			</if>
		</where>
		order by
		<if test="orderBy==null or orderBy==''">
			sale_num
		</if>
		<if test="orderBy!=null and orderBy!=''">
			#{orderBy}
		</if>
		<if test="isDesc!=null and isDesc!=''">
			desc
		</if>
		limit #{pageIndex},#{pageSize}
	</select>
	<!-- 根据id查询详细商品数据 -->
	<select id="findSysGoodsById" resultType="com.st.springsys.sysgoods.pojo.SysGoods">
		select * from goods where id=#{id}
	</select>
	<!--获取上架总条数  -->
	<select id="getOnlineRows" resultType="int">
	  select count(*) from goods
	  where onSale=#{onSale}
	</select>
	<!-- 获取总条数 -->
	<select id="getSysGoodsRows" resultType="int">
		select count(*) from goods
		<where>
			<if test="title!=null and title!=''">
				title like concat('%',#{title},'%')
			</if>
		</where>
	</select>
</mapper>